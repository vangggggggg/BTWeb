<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale= 1.0">
    <title>Trang Web Bán Hàng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header class="bg-success text-white text-center py-4">
        <h1>Nice Book</h1>
    </header>
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Book"  asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Add">Add Book</a>
        </li>

        <li class="nav-item">
            <a class="nav-link disabled" aria-disabled="true">Disabled</a>
        </li>
    </ul>
    <div>
        <main role="main" class="pb-3">
            <div class="container mt-3">
                <div class="row">
                    <div class="col-md-8">
                        @RenderBody()
                    </div>
                    <div class="col-md-4" style="text-align:center">
                        <div>
                            <h5>MC 3 - 1 MU</h5>
                            <video width="400" height="300" controls>
                                <source src="~/video/movie.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                            <p>Bài tập lập trình Web</p>
                        </div>
                        <div class="p-3 mb-2 bg-primary text-white">
                            <h5 class="margin-bottom">Liên hệ</h5>
                            <p class="middle">Điện Thoại : 3131313131</p>
                            <p class="margin-top">Email: btweb@gmail.com</p>
                        </div>
                    </div>
                   
                </div>
            </div>
        </main>
    </div>
   
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ToNguHoaaaaa 
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>